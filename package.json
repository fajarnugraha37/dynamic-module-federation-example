{
  "name": "microfrontends",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "commons/*"
  ],
  "scripts": {
    "cleanup": "bash cleanup.sh",
    "cleanup:ps": "powershell -ExecutionPolicy Bypass -File cleanup.ps1",
    "cleanup:bat": "cleanup.bat",
    "cleanup:force": "node cleanup.js --force",
    "cleanup:whatif": "powershell -ExecutionPolicy Bypass -File cleanup.ps1 -WhatIf",
    "dev:all": "bun run --filter './packages/*' dev",
    "build:all": "bun run cleanup && bun run --filter './packages/*' build",
    "preview:all": "bun run --filter './packages/*' preview",
    "build:copy": "bun run build:all && bun run copy:dist",
    "copy:dist": "bash copy-dist.sh",
    "copy:dist:ps": "powershell -ExecutionPolicy Bypass -File copy-dist.ps1",
    "copy:dist:bat": "copy-dist.bat",
    "serve": "bun run build:copy && serve"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.16",
    "qiankun": "^2.10.16",
    "tailwindcss": "^4.1.16"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@module-federation/vite": "^1.9.0",
    "@originjs/vite-plugin-federation": "^1.4.1",
    "@types/bun": "latest",
    "@types/node": "^24.9.2",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.2",
    "less": "^4.4.2",
    "postcss": "^8.5.6",
    "postcss-combine-media-query": "^2.1.0",
    "postcss-sort-media-queries": "^5.2.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "sass": "^1.93.2",
    "serve": "^14.2.5",
    "terser": "^5.44.0",
    "vue-tsc": "^3.1.2",
    "vite": "^7.1.12",
    "vite-plugin-compression2": "^2.3.1",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-imagemin": "^0.6.1",
    "vite-plugin-pwa": "^1.1.0",
    "vite-plugin-robots-txt": "^0.2.0",
    "vite-plugin-sitemap": "^0.8.2",
    "vite-plugin-vue2": "^2.0.3"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}
